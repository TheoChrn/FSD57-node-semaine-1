- const menuItems = [{ path: '/', title: 'Home', isActive: true }, { path: '/about-me', title: 'About', isActive: false }, { path: '/references', title: 'References', isActive: false }, { path: '/contact-me', title: 'Contact', isActive: false }];

mixin navItem(path, title, isActive)
  li: a(href=path, data-active=isActive && "")= title

nav: ul
  each val in menuItems
    +navItem(val.path, val.title, val.path === url)
